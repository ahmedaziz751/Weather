<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="false"
             
    x:Class="Weather.Views.CurrentWeatherPage">
    <ContentPage.Content>
        <Grid>
            <Image  x:Name="background"
                    Source="cloudy.png"
                    Aspect="Fill" />

            

            <Grid>


                <Grid.RowDefinitions>


                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>


                <Label x:Name="locationName"
                       Text="London"
                       FontFamily="DosisSemiBold"
                       FontSize="25"
                       TextColor="#ffffff"
                       Grid.Row="0"
                       HorizontalOptions="Center"
                       Margin="0,5" />

                


                <Image x:Name="currentWeatherIcon"
                       Margin="20,40"
                       Source="w01d.png"
                       Grid.Row="1"
                       WidthRequest="165"
                       HorizontalOptions="End" />

                <Grid Grid.Row="1"
                      Margin="20,40"
                      HorizontalOptions="Start">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label x:Name="currentDegreeTxt"
                           Text="19°"
                           Grid.Row="0"
                           FontFamily="DosisSemiBold"
                           HorizontalTextAlignment="Center"
                           FontSize="75"
                           TextColor="#ffffff" />
                    <Label x:Name="currentWeatherStatueTxt"
                           Text="thunderstorm with heavy drizzle"
                           Margin="0,80,0,0"
                           Grid.Row="0"
                           FontFamily="DosisSemiBold"
                           HorizontalTextAlignment="Start"
                           FontSize="15"
                           TextColor="#ffffff" />
                </Grid>



                <BoxView Grid.Row="2"
                         Color="Black"
                         Margin="0,120,0,0"
                         HorizontalOptions="Center"
                         WidthRequest="148"
                         HeightRequest="89"
                         Opacity="0.5"
                         CornerRadius="25" />


                <Grid Grid.Row="2"
                      HorizontalOptions="Center"
                      Margin="0,120,0,0"
                      WidthRequest="148"
                      HeightRequest="89">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />

                    </Grid.ColumnDefinitions>

                    <Image x:Name="wet"
                           Margin="15,10,0,0"
                           Grid.Column="0"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           HeightRequest="35"
                           WidthRequest="35"
                           Source="wet.png" />

                    <Label x:Name="wetTxt"
                           Grid.Column="0"
                           Grid.Row="1"
                           HorizontalOptions="Start"
                           Margin="25,0,0,0"
                           Text="50%"
                           FontFamily="DosisRegular"
                           HorizontalTextAlignment="Center"
                           FontSize="15"
                           TextColor="#ffffff" />


                    <Image x:Name="wind"
                           Source="windm.png"
                           Margin="30,10,0,0"
                           Grid.Column="1"
                           Grid.Row="0"
                           HorizontalOptions="Center"
                           HeightRequest="35"
                           WidthRequest="35" />
                    <Label x:Name="windTxt"
                           Text="20 m/s"
                           Grid.Column="1"
                           Grid.Row="1"
                           HorizontalOptions="Start"
                           Margin="25,0,0,0"
                           FontFamily="DosisRegular"
                           HorizontalTextAlignment="Center"
                           FontSize="15"
                           TextColor="#ffffff" />


                </Grid>

                <ScrollView Orientation="Horizontal"
                            Grid.Row="3">


                    <Grid>

                        <Grid.ColumnDefinitions>


                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />


                        </Grid.ColumnDefinitions>


                        <BoxView Color="Black"
                                 Opacity="0.5"
                                 Grid.Column="0"
                                 CornerRadius="25"
                                 WidthRequest="120" />


                        <Grid Grid.Column="0"
                              Margin="0,20,0,20">


                            <Grid.RowDefinitions>

                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />

                            </Grid.RowDefinitions>

                            <Label x:Name="day1Txt"
                                   Grid.Row="0"
                                   Text="Wednesday"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Start"
                                   FontSize="20"
                                   TextColor="White" />

                            <Image x:Name="day1icon"
                                   Grid.Row="1"
                                   VerticalOptions="Center"
                                   Source="w13d.png"
                                   HeightRequest="58" />

                            <Label x:Name="day1DegTxt"
                                   Text="20°"
                                   Grid.Row="2"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="End"
                                   FontSize="20"
                                   TextColor="#ffffff" />


                        </Grid>
                        
                        <BoxView Color="Black"
                                 Opacity="0.5"
                                 Grid.Column="1"
                                 CornerRadius="25"
                                 WidthRequest="120" />

                        <Grid Grid.Column="1"
                              Margin="0,20,0,20">


                            <Grid.RowDefinitions>

                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />

                            </Grid.RowDefinitions>

                            <Label x:Name="day2Txt"
                                   Grid.Row="0"
                                   Text="Friday"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Start"
                                   FontSize="20"
                                   TextColor="White" />

                            <Image x:Name="day2icon"
                                   Grid.Row="1"
                                   Source="w02d.png"
                                   VerticalOptions="Center"
                                   HeightRequest="58" />

                            <Label x:Name="day2DegTxt"
                                   Text="14°"
                                   Grid.Row="2"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="End"
                                   FontSize="20"
                                   TextColor="#ffffff" />


                        </Grid>
                        <BoxView Color="Black"
                                 Opacity="0.5"
                                 Grid.Column="2"
                                 CornerRadius="25"
                                 WidthRequest="120" />

                        <Grid Grid.Column="2"
                              Margin="0,20,0,20">


                            <Grid.RowDefinitions>

                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />

                            </Grid.RowDefinitions>

                            <Label x:Name="day3Txt"
                                   Grid.Row="0"
                                   Text="Saturday"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Start"
                                   FontSize="20"
                                   TextColor="White" />

                            <Image x:Name="day3icon"
                                   Grid.Row="1"
                                   Source="w09d.png"
                                   VerticalOptions="Center"
                                   HeightRequest="58" />

                            <Label x:Name="day3DegTxt"
                                   Text="9°"
                                   Grid.Row="2"
                                   FontFamily="DosisMedium"
                                   VerticalOptions="End"
                                   HorizontalTextAlignment="Center"
                                   FontSize="20"
                                   TextColor="#ffffff" />


                        </Grid>

                        <BoxView Color="Black"
                                 Opacity="0.5"
                                 Grid.Column="3"
                                 CornerRadius="25"
                                 WidthRequest="120" />

                        <Grid Grid.Column="3"
                              Margin="0,20,0,20">


                            <Grid.RowDefinitions>

                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />

                            </Grid.RowDefinitions>

                            <Label x:Name="day4Txt"
                                   Grid.Row="0"
                                   Text="Sunday"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Start"
                                   FontSize="20"
                                   TextColor="White" />

                            <Image x:Name="day4icon"
                                   Grid.Row="1"
                                   Source="w11d.png"
                                   VerticalOptions="Center"
                                   HeightRequest="58" />

                            <Label x:Name="day4DegTxt"
                                   Text="12°"
                                   Grid.Row="2"
                                   FontFamily="DosisMedium"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="End"
                                   FontSize="20"
                                   TextColor="#ffffff" />

                        </Grid>

                    </Grid>

                </ScrollView>

                <ImageButton x:Name="add"
                             Source="add.png"
                             Grid.Row="0"
                             HorizontalOptions="Start"
                             WidthRequest="40"
                             BackgroundColor="#0000"
                             Margin="10,0"
                             Clicked="handleAddButton" />


                <BoxView Color="#0000"
                         Grid.Row="4"
                         VerticalOptions="FillAndExpand"/>

            </Grid>
            <BoxView x:Name="loadBack"
                     Color="#030303" IsVisible="true" />
            <Image  x:Name="loading" 
                Source="loading.gif"
                   IsAnimationPlaying="True" 
                   IsVisible="true"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>